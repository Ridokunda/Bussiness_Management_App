<html lang="en">
<head>
    <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- Mobile Metas -->
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <!-- Site Metas -->
        <meta name="keywords" content="" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        
        <title>WeFixIt | <%= title %></title>
        
        <!-- slider stylesheet -->
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
        <!-- bootstrap core css -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" />
        <!-- font awesome style -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.min.css" />
        
        <!-- Custom styles for this template -->
        <link href="/stylesheets/style.css" rel="stylesheet" />
        <!-- responsive style -->
        <link href="/stylesheets/responsive.css" rel="stylesheet" />
    <link rel='stylesheet' href='/stylesheets/custom.css' />
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>

    <div class="container">
        <form class="form reg" action="/register/registeruser" method="post">
            <h2>Register user</h2>
            <style>
                .additional-fields {
                    display: none;
                }
            </style>
            <fieldset>
                <label for="cus_name">First Name</label>
                <input type="text" value="John" name="name" id="cus_name">
            </fieldset>
            <fieldset>
                <label for="cus_lastname">Last Name</label>
                <input type="text" value="Doe" name="surname" id="cus_lastname">
            </fieldset>
            <fieldset>
                <label for="usertype">User Type</label>
                <select type="number" name="usertype" id="usertype">
                    <option value="1">Customer</option>
                    <option value="2">Admin</option>
                    <option value="3">Plumber</option>
                </select>
            </fieldset>
             <!-- Additional fields for Admin -->
            <div id="adminFields" class="additional-fields">
                <fieldset>
                    <label for="admin_code">Admin Code</label>
                    <input type="text" id="admin_code" name="admin_code">
                </fieldset>
            </div>

            <!-- Additional fields for Plumber -->
            <div id="plumberFields" class="additional-fields">
                <fieldset>
                    <label for="plumber_license">License</label>
                    <input type="text" id="plumber_license" name="plumber_license">
                </fieldset>
                <fieldset>
                    <label for="experience">Years of Experience</label>
                    <input type="number" id="experience" name="experience">
                </fieldset>
            </div>
            <fieldset>
                <label for="birthdate">Date of Birth</label>
                <input type="date" id="birthdate" name="birthdate">
            </fieldset>
            <fieldset>
                <label for="email">Email</label>
                <input type="email" name="email" id="email">
            </fieldset>
    
            <fieldset>
                <label for="password">Password</label>
                <input type="password" id="password" name="password">
            </fieldset>
            <button type="submit" id="btn_submit">Sign Up</button>
        </form>
    
    </div>
    
</body>
</html>