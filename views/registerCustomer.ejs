<!DOCTYPE html>
<html lang="en">
<head>
    <title>WeFixIt | <%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        .error {
            color: red;
        }
    </style>
</head>
<body>
    <%- include('./partials/head.ejs') %>
    <div class="container">
        <form class="form reg" action="/register/register" method="post" onsubmit="return validateForm()">
            <h2>Sign Up</h2>
            <fieldset>
                <label for="cus_name">First Name</label>
                <input type="text" value="John" name="name" id="cus_name">
            </fieldset>
            <fieldset>
                <label for="cus_lastname">Last Name</label>
                <input type="text" value="Doe" name="surname" id="cus_lastname">
            </fieldset>
            <fieldset>
                <label for="birthdate">Date of Birth</label>
                <input type="date" id="birthdate" name="birthdate">
            </fieldset>
            <fieldset>
                <label for="address">Physical Address</label>
                <input type="text" id="address" name="address">
            </fieldset>
            <fieldset>
                <label for="email">Email</label>
                <input type="email" name="email" id="email">
            </fieldset>
            <fieldset>
                <label for="password">Password</label>
                <input type="password" id="password" name="password">
            </fieldset>
            <fieldset>
                <label for="confirm_password">Confirm Password</label>
                <input type="password" id="confirm_password" name="confirm_password">
            </fieldset>
            <div id="passwordError" class="error"></div>
            <button type="submit" id="btn_submit">Sign Up</button>
        </form>
    </div>
    <script>
        function validateForm() {
            var password = document.getElementById('password').value;
            var confirmPassword = document.getElementById('confirm_password').value;
            var passwordError = document.getElementById('passwordError');

            if (password !== confirmPassword) {
                passwordError.textContent = "Passwords do not match.";
                return false;
            }
            passwordError.textContent = "";
            return true;
        }
    </script>
    <%- include('./partials/footer.ejs') %>
</body>
</html>
